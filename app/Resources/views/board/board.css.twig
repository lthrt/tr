body {
  padding: 10px;
  margin: auto;
}

.node rect {
  fill-opacity: .9;
  shape-rendering: crispEdges;
  stroke-width: 0;
}
.node text {
  text-shadow: 0 1px 0 #FFFFFF;
}

.link {
  fill: none;
  stroke: #000000;
  stroke-opacity: 1;
  z-index:5;
}

.waveBox {
  fill:#FFFFFF;
  stroke:#000000;
  stroke-width:2;
  opacity:1;
  rx:5;
  ry:5;
  z-index:0;
}

.stateBox {
  fill:#CCCCCC;
  stroke:#000000;
  stroke-width:2;
  rx:5;
  ry:5;
  z-index:2;
}

.closed {
  stroke:#000000;
  stroke-width:2;
  stroke-dasharray:5;
  opacity:0.5;
}

.open {
  stroke:#000000;
  stroke-width:2;
}

.open.triggered {
  stroke:#FF0000;
  stroke-width:2;
}

.open.triggered.resolved {
  stroke:#000000;
  stroke-width:2;
}

.title{ 
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}

.waveLabel{ 
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}

.stateLabel{ 
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}

.triggerLabel{ 
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}

.scoringLabel{ 
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}

.resourceButton {
  stroke:#000000;
  stroke-width:2;
  opacity:1;
  rx:5;
  ry:5;
  z-index:3;
}

.pig.resourceButton {
  fill:#FFC0CB;
  fill-opacity:0.5;  
  opacity: 1;
}
.dog.resourceButton {
  fill:#8B4513;
  fill-opacity:0.5;  
  opacity:1;  
}

.sheep.resourceButton {
  fill:#EEEEEE;
  opacity:1;  
}

.resourceLabel {
  font-family:sans-serif;
  font-size:12px;
  fill: #000000;
}
