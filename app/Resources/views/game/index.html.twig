{% extends 'game/game.html.twig' %}

{% block content %}
    <h1>Games list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td><a href="{{ path('game_show', { 'game': game.id }) }}">{{ game.description }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('game_edit', { 'game': game.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_new') }}">Create a new game</a>
        </li>
    </ul>
{% endblock content %}
