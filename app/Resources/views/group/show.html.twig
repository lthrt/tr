{% extends 'group/group.html.twig' %}

{% block content %}
    <h1>Group</h1>

    <table>
        <tbody>
            <tr>
                <th>Active</th>
                <td>{% if group.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ group.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('group_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('group_edit', { 'group': group.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock content %}
