{% extends 'role/role.html.twig' %}

{% block content %}
    <h1>Role</h1>

    <table>
        <tbody>
            <tr>
                <th>Role</th>
                <td>{{ role.role }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if role.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ role.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('role_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('role_edit', { 'role': role.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock content %}
