{% extends 'state/state.html.twig' %}

{% block content %}
    <h1>State</h1>

    <table>
        <tbody>
            <tr>
                <th>Sheep</th>
                <td>{{ state.sheep }}</td>
            </tr>
            <tr>
                <th>Dogs</th>
                <td>{{ state.dogs }}</td>
            </tr>
            <tr>
                <th>Pigs</th>
                <td>{{ state.pigs }}</td>
            </tr>
            <tr>
                <th>Resolved</th>
                <td>{% if state.resolved %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Closed</th>
                <td>{% if state.closed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Triggered</th>
                <td>{% if state.triggered %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('state_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('state_edit', { 'state': state.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock content %}
